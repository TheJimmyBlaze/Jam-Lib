<Application x:Class="ExampleClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ExampleClient"
             xmlns:converter="clr-namespace:ExampleClient.Converter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <converter:CollapseWhenFalseConverter x:Key="CollapseWhenFalse"/>
        <converter:CollapseWhenTrueConverter x:Key="CollapseWhenTrue"/>
        <converter:CollapseWhenZeroConverter x:Key="CollapseWhenZero"/>
        <converter:NotConverter x:Key="NotConverter"/>

        <converter:MessageBubbleSideConverter x:Key="MessageBubbleSide"/>

    </Application.Resources>
</Application>
